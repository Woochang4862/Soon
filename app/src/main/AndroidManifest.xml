<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lusle.android.soon">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.SubTheme">
        <meta-data
            android:name="android.app.default_searchable"
            android:value="com.apkgetter.SearchResultsActivity" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.Transparent"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/my_searchable_config" />
        </activity>
        <activity
            android:name=".MovieListActivity"
            android:theme="@style/AppTheme.SubTheme" />
        <activity
            android:name=".FavoriteListActivity"
            android:theme="@style/AppTheme.SubTheme" />
        <activity
            android:name=".DetailActivity"
            android:theme="@style/AppTheme.SubTheme" />
        <activity
            android:name=".YoutubePlayerActivity"
            android:theme="@style/AppTheme.SubTheme" />
        <activity android:name=".AlarmSettingActivity" />

        <receiver
            android:name=".AlarmReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.lusle.android.soon.ALARM_START" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".AlarmService"
            android:enabled="true"
            android:exported="true"
            android:permission="" />
        <provider
            android:name=".MySuggestionProvider"
            android:authorities="com.example.MySuggestionProvider" />
    </application>

</manifest>