<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/poster"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="48.3dp" />

    <TextView
        android:id="@+id/title"
        fontPath="@string/NanumBarunGothicBold_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17.7dp"
        android:layout_toRightOf="@id/poster"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="-3sp"
        android:textColor="@color/black"
        android:textSize="9.8sp"
        tools:ignore="MissingPrefix"
        tools:text="스파이더맨:더 뉴 유니버스" />

    <TextView
        android:id="@+id/release_date_label"
        fontPath="@string/NanumBarunGothicUltraLight_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_toRightOf="@id/poster"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="-3sp"
        android:textColor="@color/black"
        android:textSize="9.8sp"
        tools:ignore="MissingPrefix"
        tools:text="개봉일 : " />

    <TextView
        android:id="@+id/release_date"
        fontPath="@string/NanumBarunGothicUltraLight_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_toRightOf="@id/release_date_label"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="-3sp"
        android:textColor="@color/black"
        android:textSize="9.8sp"
        tools:ignore="MissingPrefix"
        tools:text="2018-09-17" />

    <TextView
        android:id="@+id/alarm_date_label"
        fontPath="@string/NanumBarunGothicUltraLight_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/release_date_label"
        android:layout_toRightOf="@id/poster"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="-3sp"
        android:textColor="@color/black"
        android:textSize="9.8sp"
        tools:ignore="MissingPrefix"
        tools:text="알림일 : " />

    <TextView
        android:id="@+id/alarm_date"
        fontPath="@string/NanumBarunGothicUltraLight_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/release_date_label"
        android:layout_toRightOf="@id/alarm_date_label"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="-3sp"
        android:textColor="@color/black"
        android:textSize="9.8sp"
        tools:ignore="MissingPrefix"
        tools:text="2018-09-10" />

    <TextView
        android:id="@+id/date_remaining"
        fontPath="@string/NanumBarunGothicUltraLight_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:includeFontPadding="false"
        android:layout_toLeftOf="@id/date_remaining_label"
        android:text="7"
        android:textColor="@color/colorPrimary"
        android:textSize="50.3sp"
        tools:ignore="MissingPrefix" />

    <TextView
        android:id="@+id/date_remaining_label"
        fontPath="@string/NanumBarunGothicUltraLight_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44.7dp"
        android:layout_alignParentRight="true"
        android:includeFontPadding="false"
        android:layout_marginRight="20dp"
        android:letterSpacing="0.05"
        android:lineSpacingExtra="-3sp"
        android:text="일 전"
        android:textColor="@color/black"
        android:textSize="9.8sp"
        tools:ignore="MissingPrefix" />
</RelativeLayout>