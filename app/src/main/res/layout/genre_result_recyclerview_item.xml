<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">


    <ImageView
        android:id="@+id/result_recyclerview_poster"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="67.3dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/result_recyclerview_summary"
            fontPath="@string/NanumBarunGothic_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:includeFontPadding="false"
            android:text="보헤미안 렙소디\n12세 이상 이용가\n개봉일 : 2018년 7월 4일\n장르 : 액션, 히어로물"
            android:textSize="9.2sp"
            tools:ignore="MissingPrefix" />



    </LinearLayout>

</LinearLayout>