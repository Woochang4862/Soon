<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="121.7dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="@dimen/fragment_common_side_padding">


    <ImageView
        android:id="@+id/result_recyclerview_poster"
        android:layout_width="62.3dp"
        android:layout_height="92.3dp"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="92.3dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/result_recyclerview_summary"
            fontPath="@string/NanumBarunGothic_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="17.3dp"
            android:includeFontPadding="false"
            android:text="보헤미안 렙소디\n평점 : 9.54\n12세 이상 이용가"
            android:textSize="13dp"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/result_recyclerview_book_btn"
            fontPath="@string/NanumBarunGothic_path"
            android:layout_width="87.3dp"
            android:layout_height="24.3dp"
            android:background="@color/colorAccent"
            android:includeFontPadding="false"
            android:text="@string/book_button_string"
            android:textColor="@color/white"
            android:textSize="11.3dp"
            tools:ignore="MissingPrefix" />

    </LinearLayout>

</LinearLayout>