<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="9dp"
    android:layout_marginEnd="9dp"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="@dimen/favorite_company_item_width"
        android:layout_height="@dimen/favorite_company_item_height"
        android:background="@color/white"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/company_logo"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="match_parent"
            android:src="@color/defaultTextColor" />

        <TextView
            android:id="@+id/alt_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="@dimen/alt_text_size"
            android:text="@string/alt_text"/>
    </FrameLayout>



    <TextView
        android:id="@+id/company_name"
        fontPath="@string/NanumBarunGothicUltraLight_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:maxWidth="@dimen/favorite_company_item_width"
        android:layout_marginTop="8dp"
        android:text="마블"
        android:ellipsize="end"
        android:textColor="@color/white"
        android:textSize="14dp"
        tools:ignore="MissingPrefix" />


</LinearLayout>