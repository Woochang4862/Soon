<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/light_black"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/top_space"
            android:layout_width="match_parent"
            android:layout_height="17.3dp"
            android:background="@color/lighter_black"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/company_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/light_black"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/company_title"
                    fontPath="@string/NanumBarunGothic_path"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="11dp"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="2.7sp"
                    android:text="@string/relative_company"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/company_results_more"
                    fontPath="@string/NanumBarunGothicUltraLight_path"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="?attr/selectableItemBackground"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="2.7sp"
                    android:padding="11dp"
                    android:text="총 10개의 결과 더보기"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    tools:ignore="MissingPrefix" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/company_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/company_title"
                    android:layout_marginTop="3dp" />

                <RelativeLayout
                    android:id="@+id/company_more"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/company_recyclerview"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/company_more_image"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="29.7dp"
                        android:src="@drawable/ic_expand_more" />

                    <TextView
                        android:id="@+id/company_more_text"
                        fontPath="@string/NanumBarunGothic_path"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:includeFontPadding="false"
                        android:text="@string/more"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        tools:ignore="MissingPrefix" />

                </RelativeLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/middle_space"
            android:layout_width="match_parent"
            android:layout_height="17.3dp"
            android:background="@color/lighter_black"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/movie_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/light_black"
            android:visibility="visible"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/light_black"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/movie_title"
                    fontPath="@string/NanumBarunGothic_path"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="11dp"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="2.7sp"
                    android:text="@string/relative_movie"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/movie_results_more"
                    fontPath="@string/NanumBarunGothicUltraLight_path"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="?attr/selectableItemBackground"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="2.7sp"
                    android:padding="11dp"
                    android:text="총 100개의 결과 더보기"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    tools:ignore="MissingPrefix" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/movie_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/movie_title"
                    android:layout_marginTop="3dp" />

                <RelativeLayout
                    android:id="@+id/movie_more"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/movie_recyclerView"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/movie_more_image"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="29.7dp"
                        android:src="@drawable/ic_expand_more" />

                    <TextView
                        android:id="@+id/movie_more_text"
                        fontPath="@string/NanumBarunGothic_path"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:includeFontPadding="false"
                        android:text="@string/more"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        tools:ignore="MissingPrefix" />

                </RelativeLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <View
            android:id="@+id/bottom_space"
            android:layout_width="match_parent"
            android:layout_height="17.3dp"
            android:background="@color/lighter_black"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>