<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ContentResultGenreActivity">

    <androidx.appcompat.widget.Toolbar xmlns:app="schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetEnd="0dp"
        android:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/activity_content_list_genre_keyword"
                fontPath="@string/NanumBarunGothicBold_path"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="액션"
                android:textSize="15sp"
                tools:ignore="MissingPrefix" />

            <ImageView
                android:id="@+id/activity_content_result_genre_expand_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/activity_content_list_genre_keyword"
                android:src="@drawable/round_expand_more_24" />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/activity_content_result_genre_label"
            fontPath="@string/NanumBarunGothic_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36.7dp"
            android:layout_marginTop="23.7dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="35.7dp"
            android:includeFontPadding="false"
            android:text="@string/activity_content_result_genre_label"
            android:textColor="#9f9f9f"
            android:textSize="16sp"
            tools:ignore="MissingPrefix" />

        <ImageView
            android:id="@+id/activity_content_list_genre_icon"
            android:layout_width="25dp"
            android:layout_height="20.24dp"
            android:layout_marginTop="22.7dp"
            android:layout_toRightOf="@+id/activity_content_result_genre_label"
            android:src="@drawable/ic_genre_action" />

        <TextView
            android:id="@+id/activity_content_result_genre_date"
            fontPath="@string/NanumBarunGothic_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/activity_content_result_genre_contour"
            android:includeFontPadding="false"
            android:text="날짜순"
            android:textColor="@color/colorAccent"
            android:textSize="9.3sp"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/activity_content_result_genre_contour"
            fontPath="@string/NanumBarunGothic_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_toLeftOf="@+id/activity_content_result_genre_popular"
            android:includeFontPadding="false"
            android:text="|"
            android:textSize="9.3sp"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/activity_content_result_genre_popular"
            fontPath="@string/NanumBarunGothic_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="23.7dp"
            android:includeFontPadding="false"
            android:textColor="@color/defaultTextColor"
            android:text="인기순"
            android:textSize="9.3sp"
            tools:ignore="MissingPrefix" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activity_content_result_genre_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/activity_content_result_genre_label"></androidx.recyclerview.widget.RecyclerView>


    </RelativeLayout>

</LinearLayout>